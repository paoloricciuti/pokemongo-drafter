<!DOCTYPE html>
<html lang="en">

<head>
    <script type="text/javascript">
        (function (c, l, a, r, i, t, y) {
            c[a] = c[a] || function () { (c[a].q = c[a].q || []).push(arguments) };
            t = l.createElement(r); t.async = 1; t.src = "https://www.clarity.ms/tag/" + i;
            y = l.getElementsByTagName(r)[0]; y.parentNode.insertBefore(t, y);
        })(window, document, "clarity", "script", "57s2lnu4su");
    </script>
    <meta charset="utf-8" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="theme-color" content="#234375" />
    <script data-ad-client="ca-pub-8083797847279880" async
        src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
    <meta name="description" content="The ultimate draft chooser for Pokemon GO" />
    <link rel="stylesheet" href="./articles.css">
    <title>Pokemon Go Drafter</title>
    <script>
        function toggleMenu(){
            document.querySelector(".home").classList.toggle("openArticles");
        }

        function navigate(url){
            window.location.href=url;
        }
    </script>
</head>

<body>
    <div id="root">
        <div class="main">
            <div class="container">
                <div onclick="toggleMenu()" class="homeWrapper">
                    <div class="home">
                        <i class="material-icons menu-icon">home</i>
                        <a href="/">Home</a>
                    </div>
                </div>
                <div style="background-image: url(../pogodrafter.png);" class="logo"></div>
                <% for(let article of articles){ %>
                    <div onclick="navigate('/articles/<%= article.slug %>')" class="article">
                        <h3><%= article.title %></h3>
                        <p class="author"><%= article.author %></p>
                        <hr>
                        <div><%- article.article %></div>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
</body>

</html>